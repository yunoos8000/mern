<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Node Js Tutorail</title>
    <link rel="stylesheet" href="/style.css" />
    <!-- Compiled and minified CSS -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"
    />
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
  </head>
  <body>
    <%- include ('partials/nav') %>
    <h1>This is a Home Page</h1>
    <form id="myForm" method="POST" action="/sent">
      <div class="row">
        <div class="col s3"></div>
        <div class="input-field col s6" style="text-align:center">
          <input name="item" id="item" type="text" />
          <label class="active" id="item" for="name">First Name</label>
        </div>
        <div class="col s3"></div>
        <!-- <div class="input-field col s6">
          <input name="age" id="age" type="text" class="validate" />
          <label class="active" for="age">First Name</label>
        </div> -->
      </div>
      <button class="btn waves-effect waves-light" type="submit" name="action">
        Submit
        <i class="material-icons right">send</i>
      </button>
    </form>
    <ul class="collection with-header">
      <li class="collection-header teal lighten-0"><h4>Wish List</h4></li>
      <% var i =0; wish.forEach(function(item) { %>
      <li class="collection-item darkness blue-grey darken-1 white-text " onclick='deleteItem(this)' >
          <%= item.wish %>
          <!-- <i class="material-icons dp48 secondary-content white-text"
            onclick='deleteItem(this)' >delete</i> -->
      </li>
      <%  i++; });  %>
    </ul>

    <script src="/script.js"></script>
   
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  </body>
</html>
